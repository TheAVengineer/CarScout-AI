# Environment
ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://carscout:password@localhost:5432/carscout_ai
DATABASE_SYNC_URL=postgresql://carscout:password@localhost:5432/carscout_ai

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Object Storage (R2/S3)
S3_ENDPOINT_URL=https://account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=carscout-raw-data
S3_REGION=auto

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_BOT_TOKEN=your_channel_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_FREE=price_free_plan_id
STRIPE_PRICE_PREMIUM=price_premium_plan_id
STRIPE_PRICE_PRO=price_pro_plan_id

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-min-32-chars-long-here

# Security
PASSWORD_HASH_SALT=your_stable_salt_for_phone_hashing

# Scraping
SCRAPING_CONCURRENCY=2
SCRAPING_DELAY=1.0
USE_PROXY=false
PROXY_URL=

# ML/AI
PRICING_MODEL_VERSION=v1
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
DEDUPE_SIMILARITY_THRESHOLD=0.85

# Business Rules
CHANNEL_APPROVAL_SCORE_THRESHOLD=7.5
CHANNEL_MIN_COMP_SAMPLE_SIZE=30
CHANNEL_MIN_COMP_CONFIDENCE=0.6
FREE_PLAN_ALERT_DELAY_MINUTES=30
MAX_CHANNEL_POSTS_PER_HOUR=20

# Observability
SENTRY_DSN=
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
